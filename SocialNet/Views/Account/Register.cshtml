@model SocialNet.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<hgroup class="title">
</hgroup>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row">
        <div class="span5"></div>
        <div class="span6" id="loginModal">
            <!--div class="modal-body"-->
            <div class="well">
                <form class="form-horizontal" method="POST">
                    <fieldset>
                        <legend>Register</legend>
                        <div class=" text-center">                            
                            <div class="control-group">
                                <label class="control-label" for="username">Имя пользователя</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="username">Фамилия пользователя</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.FirstName)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="username">Электронный адрес пользователя</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.Email)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="password">Пароль</label>
                                <div class="controls">
                                    @Html.PasswordFor(m => m.Password)
                                </div>
                            </div>
                            <label>Подтверждение пароля</label>
                            @Html.PasswordFor(m => m.ConfirmPassword)
                            <div class="control-group">
                                <!-- Button -->
                                <div class="controls">
                                    <button class="btn btn-success">Login</button>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
